{
    "name" : "Aescarcha/serializer",
    "description" : "A bundle to handle serialization and deseralization of Entities, it's a layer over Symfony's Serializer Component",
    "type" : "symfony-bundle",
    "authors" : [{
        "name" : "Álvaro Escarcha",
    }],
    "keywords" : [
        "symfony, serialization"
    ],
    "license" : [
        "MIT"
    ],
    "require" : {
        "php": ">=5.5.9",
        "symfony/serializer": "^2.7"
    },
    "require-dev": {
        "doctrine/orm": "~2.7",
        "symfony/phpunit-bridge": "~2.7",
        "phpunit/phpunit":              "~4.8|~5.0"
    },
    "autoload" : {
        "psr-0" : {
            "Aescarcha\\SerializerBundle" : ""
        }
    },
    "target-dir" : "Aescarcha/SerializerBundle"
}